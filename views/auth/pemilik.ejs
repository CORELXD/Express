<%- include('../partials/__head.ejs') %>
<%- include('../partials/__nav.ejs') %>


<!-- Custom fonts for this template-->
<link
  href="vendor/fontawesome-free/css/all.min.css"
  rel="stylesheet"
  type="text/css"
/>
<link
  href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
  rel="stylesheet"
/>

<!-- Custom styles for this template-->
<link href="css/sb-admin-2.min.css" rel="stylesheet" />

<div class="container-lg">
    <!-- Mengubah kelas container menjadi container-lg -->
    <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
            <%= messages.success %>
        </div>
    <% } %>
    <div class="row">
        <div class="col"><br><br>
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Daftar Pemilik
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nama Pemilik</th>
                                    <th scope="col">Alamat</th>
                                    <th scope="col">No Telepon</th>
                                    <th scope="col">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var count = 1; %>
                                <% for(var i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <th scope="row"><%= count %></th>
                                        <% count++; %>
                                        <td><%= data[i].nama_pemilik %></td>
                                        <td><%= data[i].alamat %></td>
                                        <td><%= data[i].no_hp %></td>
                                        <td>
                                            <a href="/pemilik/edit/<%= data[i].id_pemilik %>" class="btn btn-sm btn-warning mr-2">Edit</a>
                                            <a href="/pemilik/delete/<%= data[i].id_pemilik %>" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <form action="/pemilik/store" method="POST"> 
                        <div class="form-group">
                            <label for="nama_pemilik">Nama Pemilik</label>
                            <input type="text" class="form-control" name="nama_pemilik" id="nama_pemilik" required> 
                        </div>
                        <div class="form-group">
                            <label for="alamat">Alamat</label>
                            <input type="text" class="form-control" name="alamat" id="alamat" required> 
                        </div>
                        <div class="form-group">
                            <label for="no_hp">No Telepon</label>
                            <input type="tel" class="form-control" name="no_hp" id="no_hp" required> 
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary">Simpan</button>
                    </form>                        
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/__foot.ejs') %>